<link href="/css/payments.css" rel="stylesheet">

<div class="pay-box">

  <h2 class="pay-title">Pending Payments</h2>

  <% if (orders.length === 0) { %>
    <p class="pay-empty">No pending orders to pay</p>
  <% } else { %>

  <form action="/payments/confirm" method="GET">

    <% orders.forEach(order => { %>
      <label class="pay-item">

        <div class="left">
          <input
            type="checkbox"
            name="orders"
            value="<%= order.id %>"
          />

          <div>
            <p class="order-id">Order #<%= order.id %></p>
            <p class="order-sub">Pending payment</p>
          </div>
        </div>

        <div class="amount">â‚¹<%= order.total %></div>

      </label>
    <% }) %>

    <button class="pay-btn" type="submit">
      Continue to Payment
    </button>

  </form>

  <% } %>

</div>
