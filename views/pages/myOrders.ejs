<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cartell</title>

    <!--
    - favicon
  -->
    <link
      rel="shortcut icon"
      href="/assets/images/logo/favicon.ico"
      type="image/x-icon"
    />

    <!--
    - custom css link
  -->
  <link rel="stylesheet" href="/assets/css/style-prefix.css" />
  <link rel="stylesheet" href="/assets/css/myProfileSidebar.css" />
  <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/myOrders.css" />


    <!--
    - google font link
  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include("../partials/header") %>
    
    <section class="orders-main">

  <% if (orders && orders.length > 0) { %>

    <% orders.forEach(order => { %>

      <div class="order-card">

        <!-- top row -->
        <div class="order-header">
          <div>
            <p class="label">Order ID</p>
            <p>#<%= order.id %></p>
          </div>

          <div>
            <p class="label">Ordered On</p>
            <p><%= new Date(order.createdAt).toDateString() %></p>
          </div>

          <div>
            <p class="label">Total</p>
            <p class="price">â‚¹ <%= order.total %></p>
          </div>
        </div>

        <!-- middle -->
        <div class="order-body">
          <p>
            <strong>Status:</strong>
            <span class="status <%= order.order_status %>">
              <%= order.order_status.replaceAll("_", " ") %>
            </span>
          </p>

          <p>
            <strong>Payment:</strong>
            <%= order.payment_status || "pending" %>
          </p>

          <% if (order.coupon_code) { %>
            <p>
              <strong>Coupon:</strong>
              <%= order.coupon_code %>
              (âˆ’â‚¹<%= order.discount %>)
            </p>
          <% } %>
        </div>

        <!-- actions -->
        <div class="order-actions">
          <% if (order.order_status !== "paid" && order.order_status !== "shipped" && order.order_status !== "out_for_delivery" && order.order_status !== "delivered" && order.order_status !== "cancelled") { %>
            <a 
              href="/payments/confirm?orders=<%= order.id %>" 
              class="btn-view pay"
            >
              Payment
            </a>
          <% } %>

          <a href="/api/orders/<%= order.id %>/timeline" class="btn-view">
            View Timeline
          </a>
        </div>
      </div>

    <% }) %>

  <% } else { %>

    <p style="padding: 40px; font-size: 18px;">
      You haven't placed any orders yet ðŸ›’
    </p>

  <% } %>

</section>


    <%- include("../partials/footer") %>

  </body>
</html>
