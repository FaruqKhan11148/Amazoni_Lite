<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile</title>

    <!--
    - favicon
  -->
    <link
      rel="shortcut icon"
      href="/assets/images/logo/favicon.ico"
      type="image/x-icon"
    />

    <!--
    - custom css link
  -->
    <link rel="stylesheet" href="/assets/css/style-prefix.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/myProfileSidebar.css" />

    <!--
    - google font link
  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include("../partials/header") %>

    <% if (success) { %>
      <div class="flash-success"><%= success %></div>
    <% } %>

    <% if (error) { %>
      <div class="flash-error"><%= error %></div>
    <% } %>


    <section class="profile-page-wrapper" id=".profile-sidebar">
      <!-- LEFT SIDEBAR -->
      <aside class="profile-page-sidebar">
        <div class="profile-page-user">
          <img src="/assets/images/user.jpg" alt="user" />
          <p>Hello, <%= user.name %></p>
        </div>

        <div class="profile-page-box">
          <h4>MY ORDERS</h4>
        </div>

        <div class="profile-page-box">
          <h4>ACCOUNT SETTINGS</h4>
          <ul>
            <li class="active">Profile Information</li>
            <li>Manage Addresses</li>
            <li>Change Password</li>
          </ul>
        </div>

        <div class="profile-page-box">
          <h4>PAYMENTS</h4>
          <ul>
            <li>Gift Cards <span>â‚¹0</span></li>
            <li>Saved UPI</li>
            <li>Saved Cards</li>
          </ul>
        </div>

        <div class="profile-page-box">
          <h4>MY STUFF</h4>
          <ul>
            <li>My Coupons</li>
            <li>My Reviews & Ratings</li>
            <li>All Notifications</li>
            <li>My Wishlist</li>
          </ul>
        </div>

        <div class="profile-page-logout">Logout</div>
      </aside>

      <main class="profile-page-content">

      <!-- NAME/EMAIL FORM -->
      <form action="/api/users/me" method="POST">
        <div class="profile-page-card">
          <h2>Username</h2>
          <input type="text" name="name" value="<%= user.name %>" />
        </div>

        <div class="profile-page-card">
          <h2>Email Address</h2>
          <input type="email" name="email" value="<%= user.email %>" />
        </div>

        <div class="btns">
          <button type="submit" class="submit-btn">Save Changes</button>
        </div>
      </form>

      <br>
      <br>

      <!-- PASSWORD FORM -->
      <form action="/api/users/change-password" method="POST">
        <div class="profile-page-card">
          <h2>Change Password</h2>
          <input type="password" name="currentPassword" placeholder="Current Password" required /> <br><br>
          <input type="password" name="newPassword" placeholder="New Password" required />
        </div>
        <button type="submit" class="submit-btn">Update Password</button>
      </form>
      <a href="/" style="text-align: center;" class="back-btn">Go Back</a>
    </main>

    </section>

    <%- include("../partials/footer") %>

    <script>
      setTimeout(() => {
        const flash = document.querySelector(".flash-success, .flash-error");
        if (flash) flash.style.display = "none";
      }, 3000);
    </script>

  </body>
</html>
