<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cartell</title>

    <!--
    - favicon
  -->
    <link
      rel="shortcut icon"
      href="/assets/images/logo/favicon.ico"
      type="image/x-icon"
    />

    <!--
    - custom css link
  -->
    <link rel="stylesheet" href="/assets/css/style-prefix.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/myProfileSidebar.css" />
    <link rel="stylesheet" href="/assets/css/myWishlist.css" />


    <!--
    - google font link
  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include("../partials/header") %>

    <section class="product-main" id=".profile-sidebar">

        <div class="product-grid">

            <% if (wishlist && wishlist.length > 0) { %>

            <% wishlist.forEach(item => { %>

                <div class="showcase">

                <div class="showcase-banner">

                    <!-- IMAGE (you’ll connect later) -->
                    <img
                    src="<%= item.image_url || '' %>"
                    alt="<%= item.name %>"
                    class="product-img default"
                    width="300"
                    />

                    <img
                    src="<%= item.image_url || '' %>"
                    alt="<%= item.name %>"
                    class="product-img hover"
                    width="300"
                    />

                    <!-- badge optional -->
                    <% if (item.discount) { %>
                    <p class="showcase-badge"><%= item.discount %>%</p>
                    <% } %>

                    <div class="showcase-actions">

                    <!-- remove from wishlist -->
                    <form action="/api/wishlist/remove/<%= item.wishlist_id %>" method="POST">
                      <button type="submit" class="btn-action remove-wishlist">
                        <ion-icon name="heart"></ion-icon>
                      </button>
                    </form>

                    <!-- view product -->
                    <a href="/products/<%= item.product_id %>" class="btn-action">
                        <ion-icon name="eye-outline"></ion-icon>
                    </a>

                    <!-- add to cart -->
                    <form action="/api/cart/add" method="POST">
                      <input type="hidden" name="productId" value="<%= item.product_id %>">
                      <input type="hidden" name="quantity" value="1">
                      <button class="add-to-cart-btn btn-action">
                        <ion-icon name="bag-add-outline"></ion-icon>
                      </button>
                    </form>

                    </div>
                </div>

                <div class="showcase-content">

                  <div class="divider"></div>

                  <h3 class="product-name">
                    <a href="/products/<%= item.product_id %>">
                      <%= item.name %>
                    </a>
                  </h3>

                  <div class="divider small"></div>

                  <p class="product-price">₹ <%= item.price %></p>

                </div>
                </div>

            <% }) %>

            <% } else { %>

            <p style="padding: 40px; font-size: 18px;">
                Your wishlist is empty
            </p>

            <% } %>

        </div>

        </section>

    <%- include("../partials/footer") %>

  </body>
</html>
